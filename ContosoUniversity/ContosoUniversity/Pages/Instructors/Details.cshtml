@page
@model ContosoUniversity.Pages.Instructors.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Professor";
}

<h1>Detalhes do Professor</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            Sobrenome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.LastName)
        </dd>
        <dt class="col-sm-2">
            Admissão
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instructor.HireDate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-page="./Index">Voltar</a>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Instructor?.ID">Salvar</a>
</div>
