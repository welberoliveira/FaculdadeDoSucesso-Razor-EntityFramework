@page
@model ContosoUniversity.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Detalhes da Disciplina";
}

<h1>Detalhes da Disciplina</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class="col-sm-2">
            Créditos
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Credits)
        </dd>
        <dt class="col-sm-2">
            Curso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Department.DepartmentID)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index" class="btn btn-info">Voltar</a>
    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@Model.Course?.CourseID">Ir para Alteração</a>
</div>
