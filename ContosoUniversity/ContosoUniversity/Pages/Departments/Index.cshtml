@page
@model ContosoUniversity.Pages.Departments.IndexModel

@{
    ViewData["Title"] = "Cursos";
}

<h2>Cursos</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Cadastrar novo Curso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th>
                Orçamento Disponível
            </th>
            <th>
                Data de Início
            </th>
            <th>
                Coordenador
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Department)
        {
            <tr>
                <td alt="Token: @Utility.GetLastChars(item.ConcurrencyToken)">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrator.FullName)
                </td>
                <td>
                    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.DepartmentID">Alterar</a>
                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.DepartmentID">Detalhes</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.DepartmentID">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>