@page
@model ContosoUniversity.Pages.Departments.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<h1>Detalhes do Curso</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10" title="Token: @Html.DisplayFor(model => model.Department.ConcurrencyToken)">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            Orçamento disponível
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Budget)
        </dd>
        <dt class="col-sm-2">
            Data de início
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.StartDate)
        </dd>
        <dt class="col-sm-2">
            Coordenador
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Administrator.FirstMidName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index" class="btn btn-info">Voltar</a>
    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@Model.Department?.DepartmentID">Ir para Alteração</a>
</div>
